<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:backgroundTint="@color/white"
    android:layout_width="match_parent"
    android:layout_margin="@dimen/_10sdp"
    android:layout_gravity="center_horizontal"
    android:padding="@dimen/_20sdp"
    app:cardElevation="14dp"
    app:cardCornerRadius="@dimen/_7sdp"
    android:layout_height="@dimen/_70sdp">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_12sdp"
            android:src="@drawable/ic_mark_right_green_backdround"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/item_Tasks_name_TV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/imageView6"
            app:layout_constraintStart_toEndOf="@+id/imageView6"
            app:layout_constraintTop_toTopOf="@+id/imageView6"
            tools:text="Task Name"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/black"
            android:layout_marginStart="@dimen/_8sdp"/>

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            android:src="@drawable/ic_calender_green_background"
            app:layout_constraintStart_toStartOf="@+id/imageView6"
            app:layout_constraintTop_toBottomOf="@+id/imageView6" />

        <TextView
            android:id="@+id/item_Tasks_date_TV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/black"
            android:textSize="@dimen/_11ssp"
            android:layout_marginStart="@dimen/_8sdp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView11"
            app:layout_constraintStart_toEndOf="@+id/imageView11"
            app:layout_constraintTop_toTopOf="@+id/imageView11"
            tools:text="24 . 04 . 2021" />

        <androidx.cardview.widget.CardView
            android:id="@+id/item_Tasks_tasksStatus_Card"
            android:layout_width="@dimen/_55sdp"
            android:layout_height="@dimen/_22sdp"
            tools:backgroundTint="#d5fae8"
            app:cardCornerRadius="4dp"
            app:cardElevation="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/_12sdp"
            android:layout_marginEnd="@dimen/_12sdp">

        <TextView
            android:id="@+id/item_Tasks_tasksStatus_TV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical|center_horizontal"
            android:fontFamily="@font/poppins_regular"
            android:textColor="#06E173"
            android:textSize="@dimen/_10ssp"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="@+id/item_Tasks_tasksStatus_Card"
            app:layout_constraintEnd_toEndOf="@+id/item_Tasks_tasksStatus_Card"
            app:layout_constraintStart_toStartOf="@+id/item_Tasks_tasksStatus_Card"
            app:layout_constraintTop_toTopOf="@+id/item_Tasks_tasksStatus_Card"
            tools:text="@string/finished" />

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>